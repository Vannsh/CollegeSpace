<%- include("partials/header") -%>




<div class="container" style="margin-top: 30px;">
  <p class="addingClick">Want to write a Blog?<a class="addingReview" href="/writingblog"> <i class="fas fa-edit fa-2x"></i> </a></p>

    <% blogName.forEach(function(user){ %>
      <div class="row" style="padding-left:20px; padding-right: 20px; margin-top: 20px;">

        <div class="col-lg-3 col-sm-3"  style="text-align: center;">
        <% if((user.googleId !== "" && user.googleId !== undefined) || (user.githubId !== "" && user.githubId !== undefined)){ %>
          <img class="blog-image" src="<%=user.imagename%>" alt="lady-profile">
        <% }else{ %>
          <img class="blog-image" src="uploads/<%=user.imagename%>" alt="lady-profile">
        <% } %>
        </div>
        <div class="col-lg-9 col-sm-9">
          <h4 class="blogName"><%= user.name %> <%= user.lname %></h4>
          <p class="blogTimes"><%= user.blogging.bloggedDate %> @ <%= user.blogging.bloggedTime %></p>
          <p style="white-space: pre-line;"><%= user.blogging.blogged %></p>
        </div>

      </div>
    <% }) %>


</div>





<%- include("partials/footer") -%>
